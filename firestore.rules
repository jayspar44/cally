rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - each user can only access their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Food logs subcollection - each user can only access their own logs
      match /foodLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Chat history subcollection - each user can only access their own chat
      match /chatHistory/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Daily goals subcollection - per-day nutrition target snapshots
      match /dailyGoals/{goalDate} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
