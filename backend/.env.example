# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server port
PORT=3001

# Firebase Admin SDK service account JSON (single line)
# Get from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"YOUR_PROJECT_ID",...}

# Google Gemini API key (required for AI features)
# Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# USDA FoodData Central API key (optional - uses DEMO_KEY if not set)
# Get from https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=DEMO_KEY

# Environment (development|production)
NODE_ENV=development

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:4000,http://localhost:5173,capacitor://localhost

